%html
    %head
        %title= title
        = csrf_meta_tag
        = render 'layouts/stylesheets'
    %body
        .container
            = render 'layouts/header'
            %section.round
                - flash.each do |key, value|
                    %div{:class => "flash #{key}"} #{value}
                    -#<div class="flash <%= key %>"><%= value %></div>
                = yield
            = render 'layouts/footer'
            = debug params if Rails.env.development?




-#
    <!DOCTYPE html>
    <html>
    <head>
    <title><%= title %> </title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    </head>
    <body>
    <div class="container">
    <%= render 'layouts/header' %>
    <section class="round">
    <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
    </section>
    <%= render 'layouts/footer' %>
    <%= debug params if Rails.env.development? %>
    </div>
    </body>
    </html>
